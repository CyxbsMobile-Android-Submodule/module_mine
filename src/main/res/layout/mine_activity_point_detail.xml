<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <com.mredrock.cyxbs.common.component.JCardViewPlus
        android:id="@+id/jcv_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="6dp"
        app:shadowColor="#0d000000"
        app:shadowRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_margin="18dp"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/mine_user_white_color"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/civ_head"
                android:layout_alignBottom="@id/civ_head"
                android:layout_gravity="center"
                android:layout_toEndOf="@id/civ_head"
                android:gravity="center"
                android:text="@string/mine_point_detail_header_hint"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/civ_head"
                android:layout_alignBottom="@id/civ_head"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/tv_hint"
                android:gravity="center"
                android:textColor="@color/mine_point_detail_point_color"
                android:textSize="16sp"
                tools:text="666" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/civ_head"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/mine_div_line" />

            <com.mredrock.cyxbs.mine.util.widget.WarpContentSwipeRefreshLayout
                android:id="@+id/srl_point_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_point_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="1"
                    tools:listitem="@layout/recycler_view_item" />
            </com.mredrock.cyxbs.mine.util.widget.WarpContentSwipeRefreshLayout>
        </RelativeLayout>

    </com.mredrock.cyxbs.common.component.JCardViewPlus>

    <TextView
        android:id="@+id/tv_no_more_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/mine_point_detail_footer"
        android:textColor="@color/mine_point_detail_footer_color"
        android:textSize="12sp"/>

</LinearLayout>